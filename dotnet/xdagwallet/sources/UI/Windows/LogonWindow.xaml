<Window x:Class="XDagNetWallet.UI.Windows.LogonWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:local="clr-namespace:XDagNetWallet.UI.Windows"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Welcome to XDAG Wallet" Height="340.563" Width="437.55" ResizeMode="NoResize" Loaded="Window_Loaded" WindowStartupLocation="CenterScreen">
    <Grid>
        <Image Stretch="Fill" Source="/xdagnetwallet;component/Resources/dagger-logo-c.png" Margin="0,0,0.333,-0.333"/>
        <Button x:Name="btnRegisterAccount2" Content="Create New Wallet" Margin="60,193,70,0" VerticalAlignment="Top" Height="52" FontFamily="Franklin Gothic Heavy" FontSize="24" Click="btnRegisterAccount_Click" Foreground="#FF136BAB"/>
        <ProgressBar x:Name="prbProgress" HorizontalAlignment="Left" Height="10" Width="437" Margin="0,118,0,0" VerticalAlignment="Bottom" Visibility="Hidden"/>
        <Label x:Name="lblWalletStatus" Content="" HorizontalAlignment="Left" Margin="5,92,0,10" VerticalAlignment="Bottom" Width="357" Visibility="Hidden" Foreground="#FFE9EC91" Background="Transparent"/>
        <!--
        <xctk:SplitButton Name="btnLang" Content="Lang 文" Margin="0,10,9.667,0" TabIndex="2" Foreground="#FF23ACB9" Height="22" VerticalAlignment="Top" HorizontalAlignment="Right" Width="64" >
            <xctk:SplitButton.DropDownContent>
                <Grid>
                    <Button Name="btnLangEn" Content="English" Height="20" Width="95" Margin="0,0,0,0" VerticalAlignment="Top" Click="btnLangEn_Click" />
                    <Button Name="btnLangZh" Content="中文" Height="20" Width="95" Margin="0,20,0,0" VerticalAlignment="Top" Click="btnLangZh_Click" />
                </Grid>
            </xctk:SplitButton.DropDownContent>
        </xctk:SplitButton>
        -->
        <xctk:MaterialButton x:Name="btnRegisterAccount" Content="Create New Wallet" Margin="60,193,0,0" Cursor="Hand" VerticalAlignment="Top" Height="52"  Width="302" FontFamily="Franklin Gothic Heavy" FontSize="20" Click="btnRegisterAccount_Click" Foreground="AntiqueWhite" HorizontalAlignment="Left">
            <xctk:MaterialButton.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF42A3D3" Offset="0"/>
                    <GradientStop Color="#FF1CB2A4" Offset="1"/>
                </LinearGradientBrush>
            </xctk:MaterialButton.Background>
        </xctk:MaterialButton>
        <xctk:MaterialButton x:Name="btnConnectAccount" Content="Connect Wallet" Margin="60,193,0,0" Cursor="Hand" VerticalAlignment="Top" Height="52"  Width="302" FontFamily="Franklin Gothic Heavy" FontSize="20" Click="btnConnectAccount_Click" Foreground="AntiqueWhite" HorizontalAlignment="Left">
            <xctk:MaterialButton.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF42A3D3" Offset="0"/>
                    <GradientStop Color="#FF1CB2A4" Offset="1"/>
                </LinearGradientBrush>
            </xctk:MaterialButton.Background>
        </xctk:MaterialButton>

        <xctk:MaterialButton x:Name="btnSettings" Margin="0,10,33,0" Cursor="Hand" VerticalAlignment="Top" Height="30" Width="30" Click="btnSettings_Click" Foreground="Black" MaterialAccent="Cyan" Mode="Circle" HorizontalAlignment="Right">
            <xctk:MaterialButton.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF20A2A6" Offset="0"/>
                    <GradientStop Color="#FF1A7275" Offset="1"/>
                </LinearGradientBrush>
            </xctk:MaterialButton.Background>
            <Image Source="/xdagnetwallet;component/Resources/icon-settings.png" />

        </xctk:MaterialButton>
        <Button x:Name="btnTest" Content="Button" HorizontalAlignment="Left" Margin="328,277,0,0" VerticalAlignment="Top" Width="75" Click="btnTest_Click"/>

    </Grid>
</Window>
