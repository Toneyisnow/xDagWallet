<Window x:Class="XDagNetWallet.UI.Windows.LogonWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:local="clr-namespace:XDagNetWallet.UI.Windows"
        mc:Ignorable="d"
        Title="Welcome to XDAG Wallet" Height="233.332" Width="279.999" ResizeMode="NoResize" Loaded="Window_Loaded" WindowStartupLocation="CenterScreen">
    <Grid>
        <Image Height="205" Margin="0,0,-0.333,0" VerticalAlignment="Top" Stretch="Fill" Source="/xdagnetwallet;component/Resources/dagger-logo-c.png"/>
        <Button x:Name="btnConnectAccount" Content="Connect Wallet" Margin="26,117,32.667,0" VerticalAlignment="Top" Height="40" FontFamily="Franklin Gothic Heavy" FontSize="14" Click="btnConnectAccount_Click" Foreground="#FF136BAB"/>
        <Button x:Name="btnRegisterAccount" Content="Create New Wallet" Margin="26,117,32.667,0" VerticalAlignment="Top" Height="40" FontFamily="Franklin Gothic Heavy" FontSize="14" Click="btnRegisterAccount_Click" Foreground="#FF136BAB"/>
        <ProgressBar x:Name="prbProgress" HorizontalAlignment="Left" Height="10" Margin="0,118,0,0" VerticalAlignment="Bottom" Width="377" Visibility="Hidden"/>
        <Label x:Name="lblWalletStatus" Content="" HorizontalAlignment="Left" Margin="5,92,0,10" VerticalAlignment="Bottom" Width="357" Visibility="Hidden" Foreground="#FFE9EC91"/>
        <xctk:SplitButton Name="btnLang" Content="Lang 文" Margin="0,10,9.667,0" TabIndex="2" Foreground="#FF23ACB9" Height="22" VerticalAlignment="Top" HorizontalAlignment="Right" Width="64" >
            <xctk:SplitButton.DropDownContent>
                <Grid>
                    <Button Name="btnLangEn" Content="English" Height="20" Width="95" Margin="0,0,0,0" VerticalAlignment="Top" Click="btnLangEn_Click" />
                    <Button Name="btnLangZh" Content="中文" Height="20" Width="95" Margin="0,20,0,0" VerticalAlignment="Top" Click="btnLangZh_Click" />
                </Grid>
            </xctk:SplitButton.DropDownContent>
        </xctk:SplitButton>
    </Grid>
</Window>
